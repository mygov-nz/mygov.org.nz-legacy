{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "build",
      "rootDir": "src",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "allowJs": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "typeRoots": [
        "./node_modules/@types",
        "./typings"
      ]
    },
    "filesGlob": [
      "./typings/*.d.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
    "types": [
      "classnames",
      "express",
      "history",
      "react",
      "react-dom",
      "react-redux"
    ],
    "exclude": [
      "build",
      "node_modules",
      "gulpfile.js",
      "webpack.config.js",
      "webpack.config.server.js"
    ],
    "compileOnSave": false
  }
  