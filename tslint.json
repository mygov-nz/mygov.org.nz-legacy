{
  "extends": [
    "tslint-config-standard",
    "tslint-react"
  ],
  "rules": {
    "jsx-boolean-value": [
      true,
      "always"
    ],
    "jsx-curly-spacing": [
      true,
      "always"
    ],
    "jsx-equals-spacing": [
      true,
      "never"
    ],
    "jsx-key": [
      true
    ],
    "jsx-no-bind": [
      true
    ],
    "jsx-no-lambda": [
      true
    ],
    "jsx-self-close": [
      true
    ],
    "jsx-wrap-multiline": [
      true
    ],
    "no-unused-variable": [
      true,
      { "ignore-pattern": "^_" }
    ],
    "semicolon": [
      true,
      "always"
    ]
  }
}
